<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttoneEnregPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="enregistrerProClick"
                android:text="ENREGISTRER UN PROFESSIONNEL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPrendreRDV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="prendreRDvClick"
                android:text="PRENDRE EN RENDEZ-VOUS" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonCherchPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="rechercheProClick"
                android:text="CHERCHER UN PRO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAffichPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="afficherPlanningClick"
                android:text="AFFICHER PLANING" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00F1EEEE"
                android:backgroundTint="#FB0000"
                android:foregroundGravity="center"
                android:text="Accueil Vendeur GSB"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/t_l_chargement_removebg_preview" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>